<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/blue_round_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePage">


        <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="107dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:gravity="top"
                android:orientation="vertical"
                android:text="Wallet"
                android:textColor="@color/colorTextPrimary"
                android:textSize="36sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="66dp"
            android:layout_height="50dp"
            android:layout_marginBottom="300dp"
            android:background="@null"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_button" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="338dp"
            android:layout_height="220dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageButton
                android:id="@+id/payment_card"
                android:layout_width="342dp"
                android:layout_height="match_parent"
                android:background="@null"></ImageButton>

            <TextView
                android:id="@+id/card_pan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="120sp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="5412 7512 3412 3456"
                android:textColor="#101010"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="170sp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="John Doe"
                android:textColor="#0C0C0C"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/chipset"
                android:layout_width="57dp"
                android:layout_height="45dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="66dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chip" />

            <TextView
                android:id="@+id/expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180sp"
                android:layout_marginTop="170sp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="Valid till"
                android:textColor="#050505"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/expiry_date_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="180sp"
                android:layout_marginTop="185sp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="04/23"
                android:textColor="#090808"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/visa"
                android:layout_width="85dp"
                android:layout_height="63dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="20sp"
                app:srcCompat="@drawable/ic_visa__1_" />

            <TextView
                android:id="@+id/track_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/sf_ui_display_black"
                android:text="Enter Track Data"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="60sp"
                android:ems="10"
                android:hint="Track Data"
                android:inputType="textPersonName"
                android:text="" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="100sp"
                android:layout_height="50sp"
                android:layout_marginStart="125sp"
                android:layout_marginTop="150sp"
                android:background="@null"
                app:srcCompat="@drawable/butto_bg_2" />

            <TextView
                android:id="@+id/add"
                android:layout_width="98dp"
                android:layout_height="49dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/sf_ui_display_black"
                android:gravity="center"
                android:text="+Add"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/sf_ui_display_black"
        android:gravity="center"
        android:textSize="20sp" />


</RelativeLayout>