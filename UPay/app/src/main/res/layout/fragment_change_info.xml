<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.Profile.ChangeInfo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/imageButton16"
                android:layout_width="180dp"
                android:layout_height="216dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="120dp"
                android:background="@drawable/round_outline"
                android:scaleType="centerCrop" >
            </ImageButton>

            <TextView
                    android:id="@+id/textView31"
                    android:layout_width="165dp"
                    android:layout_height="66dp"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="-300sp"
                    android:fontFamily="@font/sf_ui_display_black"
                    android:text="Change Profile Picture"
                    android:textColor="@color/defaultContentColor"
                    android:textSize="20sp"/>

            <ProgressBar
                android:id="@+id/progressBar4"
                android:layout_width="match_parent"
                android:layout_marginTop="130sp"
                android:theme="@style/AppTheme.Design"
                android:layout_height="58dp"
                />
            <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="100sp"
        android:fontFamily="@font/sf_ui_display_black"
        android:text="Change Username"
        android:textColor="@color/defaultContentColor"
        android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50sp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="@dimen/common_20_dp"
                android:elevation="@dimen/common_5_dp"
                >

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sf_ui_display_black"
                    android:gravity="center"
                    android:text="Android" />

                <ImageButton
                    android:id="@+id/Username_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"/>
            </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/sf_ui_display_black"
        android:text="Your Email"
        android:textColor="@color/defaultContentColor"
        android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="50sp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardCornerRadius="@dimen/common_20_dp"
                android:elevation="@dimen/common_5_dp"
                >
            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sf_ui_display_black"
                android:gravity="center"
                android:text="android@android.com" />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/sf_ui_display_black"
        android:text="Change Password"
        android:textColor="@color/defaultContentColor"
        android:textSize="20sp" />

            <ImageButton
                android:id="@+id/imageButton17"
                android:layout_width="140sp"
                android:layout_height="50sp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_10_dp"
                android:background="@null"
                android:src="@drawable/butto_bg_2">

            </ImageButton>

            <TextView
                android:id="@+id/textView38"
                android:layout_width="140sp"
                android:layout_height="50sp"
                android:layout_marginTop="-50sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="New Password"
                android:textColor="@color/white"
                android:fontFamily="@font/sf_ui_display_black"/>
            <ImageButton
                    android:src="@drawable/red_fill__rounded_color"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_marginTop="-1750px"
                    android:layout_marginStart="300px"
                    android:layout_gravity="center"
                    android:id="@+id/imageButton21"/>
            <TextView
                    android:text="Save"
                    android:layout_width="131dp"
                    android:layout_height="39dp"
                    android:id="@+id/textView43"
                    android:fontFamily="@font/sf_ui_display_black"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginStart="660px"
                    android:layout_marginTop="-110px"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>