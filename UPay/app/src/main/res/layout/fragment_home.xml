<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_home"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:windowBackground"
    tools:context="com.example.BarFragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomePage">


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:windowBackground"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="199dp"
                    android:layout_marginTop="-30dp"
                    app:srcCompat="@null" />

                <ImageButton
                    android:id="@+id/imageView12"
                    android:layout_width="56dp"
                    android:layout_height="55dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="-140dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/round_outline"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-55dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="616dp"
                    android:fontFamily="@font/sf_ui_display_black"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:textColor="#373333"
                    android:textSize="36sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_home"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-570dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="616dp"
                    app:cardBackgroundColor="#E8EBEC"
                    app:cardCornerRadius="25dp" >

                    <ImageButton
                        android:id="@+id/paymentCard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="-20dp"
                        android:scaleType="matrix"
                        android:src="@drawable/ic_visa_new" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_home2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="-590dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="-10dp"
                    app:cardBackgroundColor="#E8EBEC"
                    app:cardCornerRadius="40dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/sf_ui_display_black"
                        android:gravity="center"
                        android:text="Activity"
                        android:textSize="25sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>