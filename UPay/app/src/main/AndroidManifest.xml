        <activity android:name="com.example.External.FirstTimeActivity" />
        <activity android:name="com.example.External.CreateNewAccountPhoneAuth" />
        <activity android:name="com.example.Profile.Profile" />
        <activity android:name="com.example.External.ForgotPassword" />
        <activity android:name=".HomePage" />
        <activity android:name="com.example.External.CreateNewAccount" />
        <activity android:name="com.example.External.LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>